<?xml version="1.0" encoding="UTF-8"?>
<module rename-to='burrito'>
	<!-- Inherit the core Web Toolkit stuff.                        -->
	<inherits name='com.google.gwt.user.User' />
	
	<!-- Inherit Burrito widgets -->
	<inherits name='burrito.BurritoWidgets' />
	<!-- Inherit default theme -->
	<inherits name='com.google.gwt.user.theme.standard.Standard' />
	<!-- Other module inherits                                      -->

	<!-- Inherit gwt-dnd -->
	<inherits name='com.allen_sauer.gwt.dnd.gwt-dnd'/>
	
	<!-- This module contains admin widgets: -->
	<inherits name="burrito.BurritoWidgets" />
	
	<stylesheet src="admin.css" />
	<script src="crudmessages.js"/>
	
	<!-- Specify the app entry point class.                         -->
	<entry-point class='burrito.client.Burrito' />
	<extend-property name="locale" values="sv" />

	<!-- Specify the paths for translatable code                    -->
	<source path='client' />
	<source path='shared' />

</module>
